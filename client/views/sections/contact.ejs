<section id="contact" class="contact-section section container">
    <div class="contact-content">
        <!-- Section Title -->
        <button class="section-btn">MY CONTACT</button>
        <h2 class="section-heading">Let's discuss your project!</h2>

        <!-- Contact Form -->
        <form class="contact-form">
            <div class="form-group">
                <input type="text" name="name" placeholder="Your Name" required>
                <input type="email" name="email" placeholder="Your Email" required>
            </div>
            <textarea name="message" placeholder="Your Message" required></textarea>
            <button type="submit" class="submit-btn">SEND A MESSAGE</button>
        </form>

        <!-- CONTACT INFO SECTION -->
        <!-- CONTACT INFO SECTION -->
        <div class="contact-info">
            <div class="info-row">
                <!-- PHONE INFO -->
                <a href="tel:+447386709495" class="info-box">
                    <img src="/images/telephone.png" alt="Phone" class="info-icon">
                    <div class="info-text">
                        <span class="info-label">Phone</span>
                        <span class="info-value">07386709495</span>
                    </div>
                </a>

                <!-- EMAIL INFO -->
                <a href="mailto:callum.luxford.dev@gmail.com" class="info-box">
                    <img src="/images/mail.png" alt="Email" class="info-icon">
                    <div class="info-text">
                        <span class="info-label">Email</span>
                        <span class="info-value">Click to Mail</span>
                    </div>
                </a>
            </div>

            <!-- ADDRESS INFO -->
            <a href="https://www.google.com/maps/place/Kent,+UK" target="_blank" class="info-box full-width">
                <img src="/images/location (1).png" alt="Location" class="info-icon">
                <div class="info-text">
                    <span class="info-label">Address</span>
                    <span class="info-value">South East, UK</span>
                </div>
            </a>
        </div>

    </div>
</section>