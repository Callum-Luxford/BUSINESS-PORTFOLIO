<section id="contact" class="contact-section section container">
    <div class="contact-content">
        <!-- Section Title -->
        <button class="section-btn">CONTACT US</button>
        <h2 class="section-heading">Let's discuss your project!</h2>

        <!-- Contact Form -->
        <form class="contact-form">
            <div class="form-group">
                <input type="text" name="name" placeholder="Your Name" required>
                <input type="email" name="email" placeholder="Your Email" required>
            </div>
            <textarea name="message" placeholder="Your Message" required></textarea>
            <button type="submit" class="submit-btn">SEND A MESSAGE</button>
        </form>
    </div>
</section>